# Docker Environment Variables
# Copy this to .env for docker-compose

# Deployment Mode
# Set to "true" to use an external database, "false" to deploy a new one with Docker
USE_EXTERNAL_DB=false

# Database
DB_USER=chancel
DB_PASSWORD=chancel_secure_password_change_me
DB_NAME=chancel
DB_PORT=5431

# Application
WEB_PORT=3000
API_PORT=4000

# NextAuth
NEXTAUTH_SECRET=generate_a_random_secret_here_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# GraphQL API
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# Database URL (used by Prisma and the app)
# This will be automatically set based on USE_EXTERNAL_DB
# Internal DB: postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
# External DB: postgresql://${DB_USER}:${DB_PASSWORD}@localhost:${DB_PORT}/${DB_NAME}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
