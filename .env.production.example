# Production Environment Configuration for Shiloh Deployment
# Copy this to .env.production and fill in your actual values

# Database Configuration
DB_USER=chancel
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DB_NAME=chancel
DB_PORT=5432

# Application URLs (Update with your Shiloh IP or domain)
NEXTAUTH_URL=http://YOUR_SHILOH_IP:3000
NEXT_PUBLIC_API_URL=http://YOUR_SHILOH_IP:4000/graphql

# Secrets (MUST CHANGE THESE!)
NEXTAUTH_SECRET=CHANGE_ME_TO_LONG_RANDOM_STRING
JWT_SECRET=CHANGE_ME_TO_LONG_RANDOM_STRING

# Web Port (optional, defaults to 3000)
WEB_PORT=3000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
